@model WordBattlerWeb.Models.BattlerInfo

<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=Edge" />
    <title></title>
    <script src="../../Scripts/jquery-2.1.1.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.validate.min.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js" type="text/javascript"></script>
    <script src="../../Scripts/jquery.activity-indicator-1.0.0.min.js" type="text/javascript"></script>

    <link href="../../Content/Office.css" rel="stylesheet" type="text/css" />
    <script src="https://appsforoffice.microsoft.com/lib/1.0/hosted/office.js" type="text/javascript"></script>

    <!-- Office.js へのローカル参照を使用してオフラインのデバッグを有効にするには、次のスクリプトを使用します。                        -->
    <!--    <script src="../../Scripts/Office/MicrosoftAjax.js" type="text/javascript"></script>       -->
    <!--    <script src="../../Scripts/Office/1.0/office.js" type="text/javascript"></script>          -->

    <link href="/App/App.css" rel="stylesheet" type="text/css" />
    <script src="/App/App.js" type="text/javascript"></script>

    <link href="/App/Home/AccountForm.css" rel="stylesheet" type="text/css" />
    <script src="/App/Home/Regist.js" type="text/javascript"></script>
</head>
<body>
    <div id="content-header">
        <div class="padding">
            <h1>とうろく</h1>
        </div>
    </div>
    <div id="content-main">
        <div class="padding">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <p data-description="ここにユーザーIDの解説がはいります">
                    ID
                    @Html.TextBoxFor(model => model.Id)
                    @Html.ValidationMessageFor(model => model.Id, "", new { @class = "text-danger" })
                </p>
                <p data-description="ここにバトラーネームの解説がはいります">
                    バトラーネーム
                    @Html.TextBoxFor(model => model.Name)
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </p>
                <p data-description="ここにパスワードの解説がはいります">
                    パスワード
                    @Html.PasswordFor(model => model.BattlerAccountInfo.Password)
                    @Html.ValidationMessageFor(model => model.BattlerAccountInfo.Password, "", new { @class = "text-danger" })
                </p>
                <p>キャラクター</p>
                <p>
                    <label id="character-radiobox" data-description="ここにキャラクター｢クラウディア｣の解説がはいります"><img src="../../images/クラウディアSD1.jpg" alt="" width="60" height="100" /><br />@Html.RadioButtonFor(Model => Model.BattlerAccountInfo.Character, "クラウディア")クラウディア</label>
                    <label id="character-radiobox" data-description="ここにキャラクター｢ちーたん｣の解説がはいります"><img src="../../images/ちーたん.png" alt="" width="60" height="100" /><br />@Html.RadioButtonFor(Model => Model.BattlerAccountInfo.Character, "ちーたん")ちーたん</label>
                    <label id="character-radiobox" data-description="ここにキャラクター｢琴葉　茜・葵｣の解説がはいります"><img src="../../images/横向き_茜葵.png" alt="" width="60" height="100" /><br />@Html.RadioButtonFor(Model => Model.BattlerAccountInfo.Character, "琴葉　茜・葵")琴葉　茜・葵</label>
                    <label id="character-radiobox" data-description="ここにキャラクター｢？？？｣の解説がはいります"><img src="~/images/iruka.png" alt="" width="60" height="100" /><br />@Html.RadioButtonFor(Model => Model.BattlerAccountInfo.Character, "？？？")？？？</label>
                </p>
                <p>
                    <p>@Html.ValidationMessageFor(model => model.BattlerAccountInfo.Character, "", new { @class = "text-danger" })</p>
                    <input id="Submit1" type="submit" value="とうろく" /> <input id="Back" type="button" value="タイトルにもどる" />
                </p>
            }
        </div>
    </div>
    <div id="content-footer">
        <div class="padding"></div>
    </div>
</body>
</html>
